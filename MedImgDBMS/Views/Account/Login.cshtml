@model MedImgDBMS.Models.account

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <fieldset>
        <legend></legend>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <table align="center">
                <tr>
                    <td><font color="red">@ViewBag.Message</font></td>
                </tr>
            </table>
            <br />
        }
        <div align="center" style="margin-top:30px; margin-bottom: 30px;"><label style="font-size: 35px; font-weight:bold;">Welcome to the Medical Image Database System!</label></div>
        <table align="center">
            <tr>
                <td>@Html.DisplayName("Account Name:　")</td>
                <td>@Html.TextBoxFor(a => a.AcctLName)</td>
                <td>@Html.ValidationMessageFor(a => a.AcctLName)</td>
            </tr>
            <tr>
                <td>@Html.DisplayName("Password:　")</td>
                <td>@Html.PasswordFor(a => a.AcctPasswd)</td>
                <td>@Html.ValidationMessageFor(a => a.AcctPasswd)</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <br />
                    <button class="btn btn-primary" type="submit" value="Login">LOGIN</button>
                </td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}



